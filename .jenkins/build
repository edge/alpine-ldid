def buildAndPushImage(registry, registryCredential, tag) {
  docker.withRegistry("https://$registry", registryCredential) {
    def image = docker.build("$registry/$tag")
    image.push()
    return "$registry/$tag"
  }
}

pipeline {
  agent {
    label 'local'
  }
  stages {
    stage('Build') {
      failFast true
      parallel {
        stage('x64') {
          agent {
            label 'arch-x64'
          }
          steps {
            script {
              buildAndPushImage(REGISTRY, REGISTRY_CREDENTIAL, "internal/edge-ldid-x64")
            }
          }
        }
        stage('arm64') {
          agent {
            label 'arch-arm64'
          }
          steps {
            script {
              buildAndPushImage(REGISTRY, REGISTRY_CREDENTIAL, "internal/edge-ldid-arm64")
            }
          }
        }
      }
    }
  }
}
